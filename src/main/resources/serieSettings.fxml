<?xml version="1.0" encoding="UTF-8"?>

<?import abakusfx.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
    xmlns="http://javafx.com/javafx"
    fx:controller="abakusfx.SerieSettingsController"
    stylesheets="app.css, serieSettings.css">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding>
            <Insets top="10" left="10" bottom="2" right="10" />
        </padding>
        <Label text="von" />
        <DatePicker fx:id="von" />
        <Label text="bis" />
        <DatePicker fx:id="bis" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding>
            <Insets top="10" left="10" bottom="2" right="10" />
        </padding>
        <Label text="Entgeltgruppe" />
        <ComboBox fx:id="gruppe" />

        <Label text="Umfang" />
        <Spinner fx:id="umfang" editable="true"
            styleClass="percent-spinner">
            <valueFactory>
                <Converters.PercentSpinnerFactory />
            </valueFactory>
        </Spinner>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding>
            <Insets top="10" left="10" bottom="2" right="10" />
        </padding>
        <RadioButton text="Neueinstellung">
            <toggleGroup>
                <ToggleGroup fx:id="neuOderWeiter" />
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="weiter"
            text="WeiterBeschÃ¤ftigung">
            <toggleGroup>
                <fx:reference source="neuOderWeiter" />
            </toggleGroup>
        </RadioButton>

    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding>
            <Insets top="10" left="10" bottom="2" right="10" />
        </padding>

        <Label text="Stufe" />
        <ComboBox fx:id="stufe">
            <converter>
                <abakusfx.Converters
                    fx:factory="createStufeConverter" />
            </converter>
        </ComboBox>

        <Label text="seit" fx:id="seitLabel" />
        <DatePicker fx:id="seit" />
        <!--<Label text="Umfang" fx:id="umfangSeitLabel"/> <Spinner fx:id="umfangSeit" 
            editable="true" styleClass="percent-spinner"> <valueFactory> <Converters.PercentSpinnerFactory 
            fx:id="umfangSeitSpinnerFactory"/> </valueFactory> </Spinner> -->
    </HBox>
</VBox>
