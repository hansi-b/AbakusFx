<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TabPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
    xmlns="http://javafx.com/javafx"
    fx:controller="abakusfx.AppController" fx:id="topLevelPane"
    stylesheets="app.css">
    <top>
        <MenuBar>
            <Menu mnemonicParsing="true" text="Datei">
                <MenuItem accelerator="CTRL+N" text="_Neu"
                    onAction="#newProject" />
                <MenuItem accelerator="CTRL+L"
                    text="_Laden ..." onAction="#loadProject" />
                <MenuItem fx:id="saveItem" accelerator="CTRL+S"
                    text="_Speichern" onAction="#saveProject" />
                <MenuItem accelerator="CTRL+SHIFT+S"
                    text="_Speichern als ..." onAction="#saveProjectAs" />
                <MenuItem accelerator="CTRL+Q" text="_Beenden"
                    onAction="#exit" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane fx:id="tabs">
            <Tab>
                <fx:include fx:id="kostenTab"
                    source="kostenTab.fxml" />
            </Tab>
        </TabPane>
    </center>
    <bottom>
        <VBox styleClass="text-pane">
            <TextField fx:id="result" editable="false">
                <padding>
                    <Insets top="2" left="2" bottom="2" right="2" />
                </padding>
            </TextField>
        </VBox>
    </bottom>
</BorderPane>
