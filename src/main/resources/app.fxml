<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TabPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
    xmlns="http://javafx.com/javafx"
    fx:controller="abakusfx.AppController" fx:id="topLevelPane"
    stylesheets="app.css">
    <top>
        <MenuBar>
            <Menu mnemonicParsing="true" text="Datei">
                <MenuItem accelerator="CTRL+N" text="_Neu"
                    onAction="#newProject" />
                <MenuItem accelerator="CTRL+L"
                    text="_Laden ..." onAction="#loadProject" />
                <MenuItem fx:id="saveItem" accelerator="CTRL+S"
                    text="_Speichern" onAction="#saveProject" />
                <MenuItem accelerator="CTRL+SHIFT+S"
                    text="_Speichern als ..." onAction="#saveProjectAs" />
                <MenuItem accelerator="CTRL+Q" text="_Beenden"
                    onAction="#exit" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <HBox>
            <fx:include fx:id="projectTabs"
                source="projectTabs.fxml" />
            <fx:include source="Ã¼bersichtTable.fxml" />
        </HBox>
    </center>
    <bottom>
        <VBox styleClass="text-pane">
            <TextField fx:id="result" editable="false">
                <padding>
                    <Insets top="1" left="1" bottom="1" right="1" />
                </padding>
            </TextField>
        </VBox>
    </bottom>
</BorderPane>
